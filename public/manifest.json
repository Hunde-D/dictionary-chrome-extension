{
  "manifest_version": 3,
  "name": "Dictionary Extension",
  "version": "1.0.0",
  "description": "A Chrome extension that shows the definition of a word when double-clicked.",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "32": "icons/icon32.png"
  }
}
